<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:DropNGo_User_Mobile.ViewModels"
             xmlns:models="clr-namespace:DropNGo_Shared;assembly=DropNGo-Shared"
             x:DataType="viewmodels:ParcelListViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DropNGo_User_Mobile.Views.ParcelList">
    <RefreshView Command="{Binding RefreshParcelsCommand}" IsRefreshing="{Binding IsRefreshing}">
        <ListView ItemsSource="{Binding Parcels}" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Parcel">
                    <ViewCell>
                        <Grid Margin="10" VerticalOptions="Center" ColumnDefinitions="*,*">
                            <Label Text="{Binding Status}"
                                   Grid.Column="0"/>
                            <Label Text="{Binding TrackingId}"
                                   Grid.Column="1"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </RefreshView>
</ContentPage>
